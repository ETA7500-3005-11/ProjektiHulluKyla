    <ShellContent Title="Uusi Alue" ContentTemplate="{DataTemplate pages:UusiAluePage}" Route="UusiAluePage" />
    <ShellContent Title="Uusi Mökki" ContentTemplate="{DataTemplate pages:UusiMokkiPage}" Route="UusiMokkiPage" />
    <ShellContent Title="Uusi Palvelu" ContentTemplate="{DataTemplate pages:UusiPalveluPage}" Route="UusiPalveluPage" />
