<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HulluKyla.Pages.PalveluListaPage"
             Title="PalveluListaPage">


    <Grid Padding="20"
          RowDefinitions="Auto,*,Auto"
          ColumnDefinitions="*,*">

        <!-- Alue Picker Placeholder -->
        <Frame Grid.Row="0" Grid.ColumnSpan="2"
               BorderColor="Gray"
               BackgroundColor="#e0e0e0"
               CornerRadius="10"
               Padding="15"
               Margin="0,0,0,20"
               HorizontalOptions="Center">
            <Label Text="Alue picker - Valitse alue listan suodattamiseen"
                   FontSize="16"
                   TextColor="Gray"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>
        </Frame>

        <!-- Palvelulistan placeholder -->
        <Frame Grid.Row="1" Grid.ColumnSpan="2"
               BorderColor="LightGray"
               BackgroundColor="#f9f9f9"
               CornerRadius="10"
               HeightRequest="200"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               Padding="20">
            <Label Text="Tähän tulee palveluiden lista valitun AlueID:n mukaan"
                   FontSize="16"
                   TextColor="Gray"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>
        </Frame>

        <!-- Vasemman alakulman napit -->
        <StackLayout Grid.Row="2" Grid.Column="0"
                     Orientation="Horizontal"
                     Spacing="15"
                     HorizontalOptions="Start"
                     VerticalOptions="End"
                     Margin="0,20,0,0">
            <Button Text="Etusivu"
                    Clicked="Navigoi_Clicked"
                    CommandParameter="Etusivu" />
            <Button Text="Takaisin"
                    Clicked="Navigoi_Clicked"
                    CommandParameter="HallintaPage" />
        </StackLayout>

        <!-- Oikean alakulman napit -->
        <StackLayout Grid.Row="2" Grid.Column="1"
                     Orientation="Horizontal"
                     Spacing="15"
                     HorizontalOptions="End"
                     VerticalOptions="End"
                     Margin="0,20,0,0">

            <Button Text="Uusi palvelu"
                    Clicked="Navigoi_Clicked"
                    CommandParameter="UusiPalveluPage" />
        </StackLayout>

    </Grid>
</ContentPage>