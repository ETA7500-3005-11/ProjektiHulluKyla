<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HulluKyla.Pages.HakutyokaluPage"
             Title="HakutyokaluPage">


    <Grid Padding="20"
          RowDefinitions="*,Auto,*"
          ColumnDefinitions="*,*">

        <Picker x:Name="HakukategoriaPicker"
                Title="Valitse hakukategoria"
                SelectedIndexChanged="HakukategoriaSelected" 
                Grid.ColumnSpan="2" >
            <Picker.Items>
                <x:String>Mökit</x:String>
                <x:String>Asiakkaat</x:String>
                <x:String>Palvelut</x:String>
            </Picker.Items>
        </Picker>

        <!-- Mökit -->
        <Frame Grid.Row="0" Grid.ColumnSpan="2"
               BorderColor="Gray"
               BackgroundColor="#f0f0f0"
               Padding="20"
               CornerRadius="10"
               HeightRequest="200"
               WidthRequest="300"
               HorizontalOptions="Center"
               VerticalOptions="Center">
            <StackLayout x:Name="MokkiHakuNakyma" IsVisible="False">
                <Label Text="Vapaiden mökkien haku" FontAttributes="Bold"/>
                <Picker x:Name="AluePicker" Title="Valitse alue"/>
                <DatePicker x:Name="AlkuPvmPicker" />
                <DatePicker x:Name="LoppuPvmPicker" />
            </StackLayout>
        </Frame>

        <!-- Napit -->
        <StackLayout Grid.Row="1" Grid.Column="0"
                     Orientation="Horizontal"
                     Spacing="15"
                     VerticalOptions="End"
                     HorizontalOptions="Start"
                     Margin="0,20,0,0">

            <Button Text="Etusivu"
                    Clicked="Navigoi_Clicked"
                    CommandParameter="Etusivu" />

            <Button Text="Takaisin"
                    Clicked="Navigoi_Clicked"
                    CommandParameter="RaportointiPage" />

        </StackLayout>

    </Grid>
</ContentPage>