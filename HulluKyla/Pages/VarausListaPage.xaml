<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HulluKyla.Pages.VarausListaPage"
             Title="VarausListaPage">

    <Grid Padding="20"
          RowDefinitions="Auto,*,Auto"
          ColumnDefinitions="*,*,*">

        <!-- Alue Picker Placeholder -->
        <Frame Grid.Row="0" Grid.ColumnSpan="3"
               BorderColor="Gray"
               BackgroundColor="#e0e0e0"
               CornerRadius="10"
               Padding="15"
               Margin="0,0,0,20"
               HorizontalOptions="Center">
            <Label Text="Alue picker - Valitse alue varauslistan suodattamiseen"
                   FontSize="16"
                   TextColor="Gray"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>
        </Frame>

        <!-- Varauslistan placeholder -->
        <Frame Grid.Row="1" Grid.ColumnSpan="3"
               BorderColor="LightGray"
               BackgroundColor="#f9f9f9"
               CornerRadius="10"
               HeightRequest="200"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               Padding="20">
            <Label Text="Tähän tulee varausten lista valitun AlueID:n mukaan"
                   FontSize="16"
                   TextColor="Gray"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>
        </Frame>

        <!-- Napit -->
        <Button Grid.Row="2" Grid.Column="0"
                Text="Takaisin"
                Clicked="Navigoi_Clicked"
                CommandParameter="Etusivu"
                HorizontalOptions="Start"
                VerticalOptions="End"
                Margin="0,20,0,0" />

        <Button Grid.Row="2" Grid.Column="1"
                Text="Muokkaa varausta"
                Clicked="Navigoi_Clicked"
                CommandParameter="MuokkaaVaraustaPage"
                HorizontalOptions="Center"
                VerticalOptions="End"
                Margin="0,20,0,0" />

        <Button Grid.Row="2" Grid.Column="2"
                Text="Uusi varaus"
                Clicked="Navigoi_Clicked"
                CommandParameter="UusiVarausPage"
                HorizontalOptions="End"
                VerticalOptions="End"
                Margin="0,20,0,0" />

    </Grid>
</ContentPage>