<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HulluKyla.Pages.UusiVarausPage"
             Title="UusiVarausPage">

    <Grid Padding="20"
          RowDefinitions="*,Auto"
          ColumnDefinitions="*,*">

        <!-- Placeholder keskelle -->
        <Frame Grid.Row="0" Grid.ColumnSpan="2"
               BorderColor="Gray"
               BackgroundColor="#f5f5f5"
               Padding="20"
               CornerRadius="10"
               HeightRequest="300"
               WidthRequest="320"
               HorizontalOptions="Center"
               VerticalOptions="Center">
            <Label Text="Tähän tulee VarausClassin kaikki entryt"
                   FontSize="16"
                   TextColor="Gray"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>
        </Frame>

        <!-- Alakulman napit -->
        <StackLayout Grid.Row="1" Grid.Column="0"
                     Orientation="Horizontal"
                     Spacing="15"
                     HorizontalOptions="Start"
                     VerticalOptions="End"
                     Margin="0,20,0,0">

            <Button Text="Etusivu"
                    Clicked="Navigoi_Clicked"
                    CommandParameter="Etusivu" />

            <Button Text="Takaisin varauksiin"
                    Clicked="Navigoi_Clicked"
                    CommandParameter="VarausListaPage" />

        </StackLayout>

        <!-- Tallenna-nappi oikeaan alakulmaan -->
        <Button Grid.Row="1" Grid.Column="1"
                Text="Tallenna"
                Clicked="Tallenna_Clicked"
                HorizontalOptions="End"
                VerticalOptions="End"
                Margin="0,20,0,0" />




    </Grid>
</ContentPage>