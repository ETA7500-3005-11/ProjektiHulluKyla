                    <BoxView HeightRequest="2" Color="Gray" />

                    <!--  Aluevalinta  -->
                    <Frame
                        BackgroundColor="Transparent"
                        BorderColor="Gray"
                        CornerRadius="10">
                        <VerticalStackLayout>
                            <Label
                                FontAttributes="Bold"
                                FontSize="16"
                                Text="Valitse alue" />
                            <Picker x:Name="AluePicker" ItemDisplayBinding="{Binding Nimi}" />
                        </VerticalStackLayout>
                    </Frame>

                    <!--  AikavÃ¤lin valinta  -->
