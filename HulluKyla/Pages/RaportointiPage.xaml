<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:HulluKyla.Models.Controls"
             x:Class="HulluKyla.Pages.RaportointiPage"
             Title="RaportointiPage">

    <Grid Padding="20" ColumnSpacing="10"
          RowDefinitions="*,Auto"
          ColumnDefinitions="*,*">
        <Frame BorderColor="Gray"
               BackgroundColor="Transparent"
               CornerRadius="10"
               Padding="20"
               HorizontalOptions="Fill"
               VerticalOptions="Start">
            <ScrollView>
                <VerticalStackLayout Spacing="30">

                <!-- Otsikko -->
                <Label  Text="Aluekohtainen mökkien ja palveluiden tuotto"
                        FontAttributes="Bold"
                        FontSize="22"
                        HorizontalOptions="Center" />

                <BoxView HeightRequest="2" Color="Gray" />

                <!-- Aluevalinta -->
                <Frame BackgroundColor="Transparent" Padding="10" CornerRadius="10">
                    <VerticalStackLayout>
                        <Label Text="Valitse alue" FontAttributes="Bold" FontSize="16"/>
                        <Picker x:Name="AluePicker" ItemDisplayBinding="{Binding Nimi}" />
                    </VerticalStackLayout>
                </Frame>

                <!-- Aikavälin valinta -->
                <Frame BackgroundColor="Transparent" Padding="10" CornerRadius="10">
                    <VerticalStackLayout>
                        <Label Text="Valitse aikaväli (mökki- ja palvelutuotot)" FontAttributes="Bold" FontSize="16"/>
                        <HorizontalStackLayout Spacing="10">
                            <DatePicker x:Name="AlkuPvmPicker" WidthRequest="150"/>
                            <DatePicker x:Name="LoppuPvmPicker" WidthRequest="150"/>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Frame>

                <!-- Laske-nappi -->
                <controls:ThreeDButton Text="Laske tuotto"
                               Clicked="LaskeTuottoClicked"
                               HeightRequest="45"
                               WidthRequest="200"
                               HorizontalOptions="Center" />

                <!-- Tulokset -->
                <Frame BackgroundColor="Transparent" Padding="10" CornerRadius="10">
                    <VerticalStackLayout Spacing="5">
                        <Label x:Name="MokkienTuottoLabel"
                       Text="Mökkien tuotto: "
                       FontAttributes="Bold"
                       FontSize="18"
                       TextColor="White" />
                        <Label x:Name="PalveluidenTuottoLabel"
                       Text="Palveluiden tuotto: "
                       FontAttributes="Bold"
                       FontSize="18"
                       TextColor="White" />
                        <Label x:Name="TuototYhteensaLabel"
                       Text="Yhteensä: "
                       FontAttributes="Bold"
                       FontSize="20"
                       TextColor="LimeGreen" />
                    </VerticalStackLayout>
                </Frame>

            </VerticalStackLayout>
            </ScrollView>
        </Frame>


        <Frame  Grid.Column="1" Grid.Row="0"
                BorderColor="Gray"
                BackgroundColor="Transparent"
                CornerRadius="10"
                Padding="20"
                HorizontalOptions="Fill"
                VerticalOptions="Start">

            <ScrollView>
                <VerticalStackLayout Spacing="20">

                <!-- Otsikko -->
                <Label Text="Vuosikohtainen kokonaistuotto"
               FontAttributes="Bold"
               FontSize="22"
               HorizontalOptions="Center" />
                <BoxView HeightRequest="2" Color="Gray" />

                <!-- Vuoden valinta -->
                <Frame BackgroundColor="Transparent" Padding="10" CornerRadius="10">
                    <VerticalStackLayout>
                        <Label Text="Valitse vuosi" FontAttributes="Bold" FontSize="16"/>
                        <Picker x:Name="VuosiPicker" SelectedIndexChanged="VuosiSelected" />
                    </VerticalStackLayout>
                </Frame>

                <!-- Kuukausittaiset tuotot -->
                <Frame BackgroundColor="Transparent" Padding="10" CornerRadius="10">
                    <VerticalStackLayout>
                        <Label Text="Kuukausittaiset tuotot" FontAttributes="Bold" FontSize="16"/>
                        <CollectionView x:Name="TuottoLista"
                                HeightRequest="300"
                                BackgroundColor="Transparent">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Frame Padding="10"
                                   Margin="0,5"
                                   BackgroundColor="Transparent"
                                   BorderColor="LightBlue"
                                   CornerRadius="10">
                                        <HorizontalStackLayout Spacing="15">
                                            <Label Text="{Binding Kuukausi}" WidthRequest="100" TextColor="White"/>
                                            <Label Text="{Binding Tuotto, StringFormat='{}{0:F2} €'}" TextColor="White"/>
                                        </HorizontalStackLayout>
                                    </Frame>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </Frame>

                <!-- Vuoden kokonaistuotto -->
                <Label x:Name="VuosiYhteensaLabel"
               Text="Yhteensä: "
               FontAttributes="Bold"
               FontSize="20"
               TextColor="LimeGreen"
               HorizontalOptions="Center" />

                <BoxView HeightRequest="2" Color="Gray" />
            </VerticalStackLayout>
            </ScrollView>
        </Frame>


        <!-- Etusivu-nappi -->
        <controls:ThreeDButton
                Grid.Row="2" Grid.Column="0"
                Text="Takaisin"
                Clicked="Navigoi_Clicked"
                CommandParameter="Etusivu"
                HorizontalOptions="Start"
                VerticalOptions="End"
                Margin="0,20,0,0" />

        <!-- Hakutyökalu-nappi -->
        <controls:ThreeDButton 
                Grid.Row="2" Grid.Column="1"
                Text="Hakutyökalu"
                Clicked="Navigoi_Clicked"
                CommandParameter="HakutyokaluPage"
                HorizontalOptions="End"
                VerticalOptions="End"
                Margin="0,20,0,0" />

    </Grid>
</ContentPage>