        <!--  HakutyÃ¶kalu-nappi  -->
        <controls:ThreeDButton
            Grid.Row="1"
            Grid.Column="1"
            Margin="10"
            Clicked="Navigoi_Clicked"
            CommandParameter="HakutyokaluPage"
            HorizontalOptions="End"
            Text="HakutyÃ¶kalu ðŸ¡º"
            VerticalOptions="End" />

    </Grid>
</ContentPage>