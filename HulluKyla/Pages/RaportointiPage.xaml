                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </Frame>

                    <!--  Laske-nappi  -->
                    <controls:ThreeDButton
                        Clicked="LaskeTuottoClicked"
                        HeightRequest="45"
                        HorizontalOptions="Center"
                        Text="ðŸ“Š Laske tuotto"
                        WidthRequest="150" />


                    <!--  Tulokset  -->
                    <Frame
                        Padding="10"
                        BackgroundColor="Transparent"
                        CornerRadius="10">
                        <VerticalStackLayout Spacing="5">
                            <Label
                                x:Name="MokkienTuottoLabel"
                                FontAttributes="Bold"
                                FontSize="18"
                                Text="MÃ¶kkien tuotto: " />

                            <Label
                                x:Name="PalveluidenTuottoLabel"
                                FontAttributes="Bold"
                                FontSize="18"
                                Text="Palveluiden tuotto: " />

                            <Label
                                x:Name="TuototYhteensaLabel"
                                FontAttributes="Bold"
                                FontSize="20"
                                Text="YhteensÃ¤: "
                                TextColor="LimeGreen" />

                            <BoxView HeightRequest="2" Color="Gray" />

                        </VerticalStackLayout>
                    </Frame>
                </VerticalStackLayout>
            </ScrollView>
        </Frame>


        <Frame
            Grid.Row="0"
            Grid.Column="1"
            Margin="10"
            Padding="20"
            BackgroundColor="Transparent"
            BorderColor="Gray"
            CornerRadius="10"
            HorizontalOptions="Fill"
            VerticalOptions="Fill">

            <ScrollView>
                <VerticalStackLayout Spacing="20">

                    <!--  Otsikko  -->
                    <Label
                        FontAttributes="Bold"
                        FontSize="22"
                        HorizontalOptions="Center"
                        Text="Vuosikohtainen kokonaistuotto" />
                    <BoxView HeightRequest="2" Color="Gray" />

                    <!--  Vuoden valinta  -->
                    <Frame
                        Padding="10"
                        BackgroundColor="Transparent"
                        BorderColor="Gray"
                        CornerRadius="10">
                        <VerticalStackLayout>
                            <Label
                                FontAttributes="Bold"
                                FontSize="16"
                                Text="Valitse vuosi" />
                            <Picker x:Name="VuosiPicker" SelectedIndexChanged="VuosiSelected" />
                        </VerticalStackLayout>
                    </Frame>

                    <!--  Kuukausittaiset tuotot  -->
                    <Frame
                        Padding="10"
                        BackgroundColor="Transparent"
                        CornerRadius="10">
                        <VerticalStackLayout Spacing="10">
                            <Label
                                FontAttributes="Bold"
                                FontSize="16"
                                Text="Kuukausittaiset tuotot" />
                            <CollectionView
                                x:Name="TuottoLista"
                                BackgroundColor="Transparent"
                                HeightRequest="300">
                                
                                <CollectionView.ItemsLayout>
                                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="5"/>
                                </CollectionView.ItemsLayout>
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Frame
                                            Margin="0,5"
                                            Padding="10"
                                            BackgroundColor="Transparent"
                                            BorderColor="Gray"
                                            CornerRadius="10">
                                            <HorizontalStackLayout Spacing="15">
                                                <Label Text="{Binding Kuukausi}" WidthRequest="100" />
                                                <Label HorizontalOptions="End" Text="{Binding Tuotto, StringFormat='{}{0:F2} â‚¬'}" />
                                            </HorizontalStackLayout>
                                        </Frame>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </VerticalStackLayout>
                    </Frame>

                    <!--  Vuoden kokonaistuotto  -->
                    <Label
                        x:Name="VuosiYhteensaLabel"
                        FontAttributes="Bold"
                        FontSize="20"
                        HorizontalOptions="Start"
                        Text="YhteensÃ¤: "
                        TextColor="LimeGreen" />

                    <BoxView HeightRequest="2" Color="Gray" />
                </VerticalStackLayout>
            </ScrollView>
        </Frame>


        <!--  Etusivu-nappi  -->
        <controls:ThreeDButton
            Grid.Row="1"
            Grid.Column="0"
            Margin="10"
            Clicked="Navigoi_Clicked"
