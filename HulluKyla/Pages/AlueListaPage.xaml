<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HulluKyla.Pages.AlueListaPage"
             Title="AlueListaPage">

    <Grid Padding="20"
          RowDefinitions="0.8*,0.2*"
          ColumnDefinitions="0.4*,0.2*,0.4*">

        <!-- Aluelista -->
        <Grid Grid.Row="0" Grid.Column="0" >

            <CollectionView x:Name="AlueLista"
                    Grid.Row="1"
                    SelectionMode="Single" 
                    SelectionChanged="AlueSelected"
                    VerticalOptions="Center"
                    HorizontalOptions="Fill" >
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <VerticalStackLayout Spacing="2">
                            <Label Text="{Binding Nimi}" FontSize="14" FontAttributes="Bold" HeightRequest="50" />
                        </VerticalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>

        <!-- VÃ¤libuttonit -->
        
        <VerticalStackLayout Spacing="10" Grid.Column="1" Grid.Row="0" VerticalOptions="Center" HorizontalOptions="Center">
            <Button Text="Tallenna alue" Clicked="TallennaClicked" HeightRequest="50" />
            <Button Text="Poista alue" Clicked="PoistaClicked" HeightRequest="50" />
        </VerticalStackLayout>

        <!-- Entryt -->

        <VerticalStackLayout Spacing="10" Grid.Column="2" Grid.Row="0" VerticalOptions="Center" HorizontalOptions="Fill">
            <Entry x:Name="NimiEntry" Placeholder="Palvelun nimi..." />
        </VerticalStackLayout>

        <!-- Alakulman vasemman puolen napit -->
        <StackLayout Grid.Row="1" Grid.Column="0"
                     Orientation="Horizontal"
                     Spacing="15"
                     HorizontalOptions="Start"
                     VerticalOptions="End"
                     Margin="0,20,0,0">

            <Button Text="Etusivu"
                    Clicked="Navigoi_Clicked"
                    CommandParameter="Etusivu" />

            <Button Text="Takaisin"
                    Clicked="Navigoi_Clicked"
                    CommandParameter="HallintaPage" />
        </StackLayout>

        <!-- Alakulman oikean puolen napit -->
        <StackLayout Grid.Row="1" Grid.Column="2"
                     Orientation="Horizontal"
                     Spacing="15"
                     HorizontalOptions="End"
                     VerticalOptions="End"
                     Margin="0,20,0,0">

            <Button Text="Uusi alue"
                    Clicked="Navigoi_Clicked"
                    CommandParameter="UusiAluePage" />
        </StackLayout>

    </Grid>
</ContentPage>